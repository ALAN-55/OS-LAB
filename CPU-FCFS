#include<stdio.h>
int main()
{
 int n, i;
 printf("Enter the no. of processes: ");
 scanf("%d", &n);
 int p[n], bt[n], tat[n], wt[n], tottat= 0, totwt= 0;
 float avgtat, avgwt;
 printf("Burst times:\n");
 for(int i= 0; i< n; i++)
 {
 scanf("%d", &bt[i]);
 p[i]= i;
 }
 for(i= 0; i< n; i++)
 {
 if(i == 0)
 tat[i]= bt[i];
 else
 tat[i]= tat[i-1]+ bt[i];
 tottat += tat[i];
 wt[i]= tat[i]- bt[i];
 totwt += wt[i];
 }
